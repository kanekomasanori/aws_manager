<%= form_for @account, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :login_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :login_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :access_key_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :access_key_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :secret_access_key, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :secret_access_key, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                accounts_path, :class => 'btn' %>
  </div>
<% end %>
