<%- model_class = Server -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Instance</th>
      <th>Name</th>
      <th>InstanceType</th>
      <th>Description</th>
      <th>Shutdown</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @instances.each do |instance_id,instance_value| %>
      <tr>
        <td><%= instance_id %></td>
        <td><%= instance_value[:tag_set].find{ |tag| tag[:key] == 'Name'}[:value] %></td>
        <td><%= instance_value[:instance_type] %></td>
        <td></td>
        <td>
          <% if @servers[instance_id].shutdown %>
            [有効]
          <% else %>
            [無効]
          <% end %>
        </td>
        <td>
          <%= button_to '設定', { action: :shutdown, instance_id: instance_id, method: :post, remote: true }, class: 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
